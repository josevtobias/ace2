<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="games.ruiz.control_universal_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".Pincipal"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="games.ruiz.control_universal_app.PRINCIPAL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Splash"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Luz"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="games.ruiz.control_universal_app.LUZ" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".AC"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="games.ruiz.control_universal_app.AC" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter></activity>
    </application>

</manifest>